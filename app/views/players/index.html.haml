%h2
  = Time.now.year
  Draft
-if @players.present?
  - @players.each do |player|
    %ul
      %li
        = player.first_name
        = player.last_name
        = link_to 'Buy', "/buys/new/#{player.id}"
        -if current_user.holdings.any?{|holding| holding.player_id == player.id}
          = link_to 'Sell', "/sells/new/#{player.id}"
      %li
        Current Price
        = player.current_price
      %li
        Ask Price
        = player.last_ask
-else
  %li No players held.
